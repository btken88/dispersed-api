rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the campsite
    function isOwner(campsiteId) {
      return isAuthenticated() && 
        get(/databases/(default)/documents/campsites/$(campsiteId)).data.userId == request.auth.uid;
    }

    // Helper function to validate image file
    function isValidImage() {
      return request.resource.size <= 5 * 1024 * 1024 // Max 5MB
        && request.resource.contentType.matches('image/(jpeg|png|webp)');
    }

    // Campsite photos
    match /campsites/{campsiteId}/photos/{photoId} {
      // Anyone can read photos (public read)
      allow read: if true;
      
      // Only authenticated campsite owner can upload photos
      allow create: if isAuthenticated() 
        && isOwner(campsiteId)
        && isValidImage();
      
      // Only authenticated campsite owner can delete photos
      allow delete: if isAuthenticated() 
        && isOwner(campsiteId);
    }

    // Campsite thumbnails (generated by image processing)
    match /campsites/{campsiteId}/thumbnails/{thumbId} {
      // Anyone can read thumbnails
      allow read: if true;
      
      // Only Cloud Functions can write thumbnails
      allow write: if false; // Functions use admin SDK, bypasses rules
    }
  }
}
